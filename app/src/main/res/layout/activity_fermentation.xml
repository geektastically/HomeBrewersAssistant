<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:touchscreenBlocksFocus="false"
    tools:context="com.example.android.homebrewersassistant.FermentationActivity">

    <ImageView
        android:id="@+id/Fermenters_Image_View"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fermenters" />

    <TextView
        android:id="@+id/Ferm_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/BrewText"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/Ferm_Text_Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Ferm_Text"
        android:text="@string/FermentationTextDetail"
        android:textColor="#3F51B5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Ferm_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Fermenters_Image_View"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/fermentation"
        android:textColor="#3F51B5"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textStyle="bold" />

    <Button
        android:id="@+id/next_fermentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="StartBottlingActivity"
        android:text="@string/next" />

    <Button
        android:id="@+id/back_fermentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="true"
        android:onClick="StartMainActivity"
        android:text="@string/menu" />

</RelativeLayout>
